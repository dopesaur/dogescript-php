<?xml version="1.0" encoding="UTF-8" ?>
<phpunit colors="true" 
		 bootstrap="vendor/autoload.php"
		 verbose="true"
		 stopOnError="false"
         stopOnFailure="true"
         stopOnSkipped="true"
	     beStrictAboutTestsThatDoNotTestAnything="true">
	<testsuites>
		<testsuite name="Trial tests">
			<directory>./tests</directory>
		</testsuite>
	</testsuites>
	
	<filter>
		<whitelist>
			<directory suffix=".php">./src/</directory>
		</whitelist>
	</filter>
</phpunit>